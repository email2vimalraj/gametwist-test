{
  "src_folders": ["tests"],
  "output_folder": "reports",

  "selenium": {
    "start_process": true,
    "server_path": "bin/selenium-server-standalone-3.4.0.jar",
    "port": 4444,
    "cli_args": {
      "webdriver.gecko.driver": "bin/geckodriver"
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "https://www.gametwist.com/en/",
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": false,
        "path": ""
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "acceptSslCerts": true
      }
    }
  }
}